@using PagedList.Mvc

@model PagedList.IPagedList<Logs.Web.Models.Logs.ShortLogViewModel>

<div id="list">
    @Html.Partial("_LogListPartial", Model)

    <div class="pages total">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("PartialList", "List",
        new { page = page }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
            new AjaxOptions()
            {
                HttpMethod = "GET",
                UpdateTargetId = "list",
                InsertionMode = InsertionMode.Replace
            }))
    </div>
</div>

