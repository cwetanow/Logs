@model Logs.Web.Models.Logs.CommentViewModel

<h4 class="media-heading">
    @Html.ActionLink(@Model.User,
           "Details",
           new { controller = "Profile", name = Model.User })

    <small>@string.Format("{0:MM dd, yyyy} at {0:HH:mm}", Model.Date)</small>
</h4>
@Html.Raw("<pre>" + Html.Encode(Model.Content) + "</pre>")