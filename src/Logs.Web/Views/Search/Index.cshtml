@model Logs.Web.Models.Search.SearchViewModel

@{
    ViewBag.Title = "Index";
}



<div class="panel">
    @using (Ajax.BeginForm("Search", new { }, new AjaxOptions()
    {
        HttpMethod = "Post",
        UpdateTargetId = "results",
        InsertionMode = InsertionMode.Replace,
    }, new { id = "ajaxForm" }))
    {
        <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary">
                @Html.CheckBoxFor(m => m.IsSearchingUsers, "pesho") Users
            </label>
            <label class="btn btn-primary">
                @Html.CheckBoxFor(m => m.IsSearchingLogs, "pesho") Logs
            </label>
        </div>
        <hr />
        @Html.TextBoxFor(m => m.SearchTerm, new { id = "search-box" })
    }
</div>
<div id="results" class="panel">
</div>

@section scripts{
    <script>
        $('#search-box').keyup(function () {
            $('#ajaxForm').submit();
        })
    </script>

}

