
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <ul class="list-inline">
        <li>
            @using (Ajax.BeginForm("Stats", new { controller = "Nutrition" },
            new AjaxOptions
            {
                UpdateTargetId = "main",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET"
            }, new { id = "nutrition-form" }))
            {

                <div class="form-horizontal">

                    <input type="submit" class="btn btn-default btn-lg" value="Nutrition" />
                </div>
            }
        </li>
        <li>
            @using (Ajax.BeginForm("Stats", new { controller = "Measurement" },
            new AjaxOptions
            {
                UpdateTargetId = "main",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "GET"
            }, null))
            {

                <div class="form-horizontal">
                    <input type="submit" class="btn btn-default btn-lg" value="Measurements" />
                </div>
            }
        </li>
        <li>
            @Html.ActionLink("New", "Input", "Nutrition", new { @class = "btn btn-default btn-lg" })
        </li>
    </ul>
</div>
<hr />
<div id="main">

</div>

@section scripts{
    @Scripts.Render("~/bundles/jquery-unobtrusive")
    <script>
        $(document).ready(function () {
            $('#nutrition-form').submit();
        });
    </script>
}