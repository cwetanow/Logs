@using PagedList.Mvc
@model Logs.Web.Models.Logs.LogDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row">

    <!-- Blog Post Content Column -->
    <div class="col-lg-8">

        <!-- Blog Post -->
        <!-- Title -->
        <h1>@Model.Name</h1>

        <p class="lead">
            @Html.ActionLink(Model.User,
           "Details",
           new { controller = "Profile", name = Model.User },
           new { @class = "text-right" })
        </p>

        <hr>
        <!-- Date/Time -->
        <span class="pull-right">
            <span class="glyphicon glyphicon-time"></span> @string.Format("Posted on {0:MM dd, yyyy} at {0:HH:mm}", Model.DateCreated)
        </span>

        <p><span class="glyphicon glyphicon-star"></span> Rating: <span id="rating">@Model.VotesCount</span></p>

        <hr>
        <!-- Post Content -->
        <p class="lead">
            @Html.Raw(Model.Description)
        </p>

        <hr>

        <div id="comments">

            @if (Model.Entries.Count > 0)
            {
                @Html.Partial("_LogEntriesPartial", Model)
            }

        </div>



    </div>
</div>
