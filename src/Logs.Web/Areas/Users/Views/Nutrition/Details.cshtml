@model Logs.Web.Areas.Users.Models.UserIdViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <ul class="list-inline">
        <li>
            @using (Ajax.BeginForm("Stats", new { controller = "Nutrition", id = Model.UserId, area = "" },
        new AjaxOptions
        {
            UpdateTargetId = "main",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET"
        }, new { id = "nutrition-form" }))
            {

                <div class="form-horizontal">
                    <input type="submit" class="btn btn-default btn-lg" value="Nutrition" />
                </div>
            }
        </li>
        <li>
            @using (Ajax.BeginForm("Stats", new { controller = "Measurement", id = Model.UserId, area = "" },
        new AjaxOptions
        {
            UpdateTargetId = "main",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET"
        }, null))
            {

                <div class="form-horizontal">
                    <input type="submit" class="btn btn-default btn-lg" value="Measurements" />
                </div>
            }
        </li>
    </ul>
</div>
<hr />
<div id="main">

</div>

@section scripts{
    @Scripts.Render("~/bundles/jquery-unobtrusive")
    @Scripts.Render("~/scripts/nutrition-details.js")
}